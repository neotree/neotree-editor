{
  "name": "neotree-editor",
  "description": "Neo Tree - Content Manager",
  "author": "Matteo Giaccone <m.giaccone@ubiqueworks.com>",
  "license": "ISC",
  "main": "main.js",
  "private": true,
  "bin": {
    "build": "./node_modules/.bin/build",
    "concurrently": "./node_modules/.bin/concurrently",
    "cross-env": "./node_modules/.bin/cross-env",
    "electron": "./node_modules/.bin/electron",
    "electron-packager": "./node_modules/.bin/electron-packager"
  },
  "scripts": {
    "build-main": "NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config tools/webpack.config.electron.jsx --progress --profile --colors",
    "build-app": "NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config tools/webpack.config.production.jsx --progress --profile --colors",
    "build": "npm run build-main && npm run build-app",
    "grammar-boolean-expr": "cp ../neotree-android/grammar/src/main/antlr/org/neotree/grammar/BooleanExpression.g4 . && antlr4 -Dlanguage=JavaScript BooleanExpression.g4 -o src/parsers/grammars && rm -Rf BooleanExpression.g4",
    "grammar-validation-expr": "cp ../neotree-android/grammar/src/main/antlr/org/neotree/grammar/ValidationExpression.g4 . && antlr4 -Dlanguage=JavaScript ValidationExpression.g4 -o src/parsers/grammars && rm -Rf ValidationExpression.g4",
    "grammar-gen": "npm run grammar-boolean-expr",
    "dev": "concurrently --kill-others \"npm run dev-server\" \"npm run dev-electron\"",
    "dev-server": "node -r babel-register tools/server.jsx",
    "dev-electron": "HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill tools/main.development",
    "package": "NODE_ENV=production node -r babel-register tools/package.builder.jsx",
    "web": "node -r babel-register web-tools/server.jsx",
    "build-web-prod": "NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config web-tools/webpack.config.production.jsx --progress --profile --colors",
    "web-prod": "node web-tools/server.prod.jsx"
  },
  "build": {
    "appId": "org.neotree.NeoTreeEditor",
    "mac" : {
      "category": "public.app-category.medical",
      "target" : ["dmg", "zip"]
    },
    "asar": false,
    "productName": "neotree",
    "draft": true
  },
  "dependencies": {
    "antlr4": "^4.5.3",
    "auto-updater": "^1.0.2",
    "bcryptjs": "^2.3.0",
    "clamp": "^1.0.1",
    "classnames": "^2.2.5",
    "firebase": "^3.2.0",
    "flux": "^2.1.1",
    "history": "^2.0.0",
    "immutable": "^3.8.1",
    "material-design-icons-iconfont": "^2.0.5",
    "material-design-lite": "^1.1.3",
    "randomstring": "^1.1.5",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-mdl": "^1.6.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "react-router-redux": "^4.0.5",
    "react-sortable-hoc": "0.0.7",
    "react-tap-event-plugin": "^1.0.0",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "roboto-fontface": "^0.6.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-remove-console": "^6.8.0",
    "babel-plugin-transform-remove-debugger": "^6.8.0",
    "babel-plugin-webpack-loaders": "^0.7.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "concurrently": "^2.2.0",
    "copy-webpack-plugin": "^3.0.1",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "del": "^2.2.1",
    "electron": "^1.4.13",
    "electron-builder": "^5.32.1",
    "electron-debug": "^1.0.1",
    "electron-devtools-installer": "^2.0.0",
    "electron-installer-squirrel-windows": "^1.3.0",
    "electron-packager": "^7.7.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "minimist": "^1.2.0",
    "node-sass": "^3.8.0",
    "react-addons-css-transition-group": "^15.2.1",
    "redux-logger": "^2.6.1",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.1",
    "webpack-merge": "^0.14.0"
  }
}
